{
    "manifest_version": 3,
    "name": "Spoiler Blocker",
    "version": "1.0",
    "description": "Blocks spoilers on web pages by detecting specific keywords.",
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  